<h1 class="text-center">Movies</h1>
<div class="container">
    <a href="/create" class="btn btn-primary">+ New Movie</a>
    <table class="table table-striped mt-4">
        <tr>
            <th>id</th>
            <th>firstName</th>
            <th>lastName</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>DOB</th>
            <th>Action</th>
        </tr>
    
        <tr>
            <td>{{data.id}}</td>
            <td>{{data.firstName}}</td>
            <td>{{data.lastName}}</td>
            <td>{{data.email}}</td>
            <td>{{data.mobile}}</td>
            <td>{{data.dob}}</td>

            <td>
                <a href="/update">Edit</a> |
                <a href="/delete" class="text-danger" onclick="return confirm('Are you sure you want to delete this')">Delete</a>
            </td>
        </tr>
    
    </table>
    <p class="text-end">You are logged in as: 
        <b>{{data.firstName}} {{data.lastName}}</b>
    </p>
    <div>
        <a href="/cabs">Cabs</a>
    </div>
</div>